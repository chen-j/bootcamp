<h1> Login </h1>
<% if flash[:need_to_login_message] %>
<p class="need-to-login"><%= flash[:need_to_login_message] %></p>
<% end %>
<%= form_tag "/login" do %>
    <div class="">
        <%= label_tag :email %>
        <%= email_field_tag :email %>
    </div>
    <div class="">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </div>

    <div class="">
        <%= button_tag "Login" %>
    </div>
<% end %>
