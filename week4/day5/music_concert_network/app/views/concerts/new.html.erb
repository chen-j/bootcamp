<div class="col-sm-8">
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
        <h5>Add a new concert</h5>
    </div>
    </div>
        <%= form_for @new_concert do |f| %>
            <div class="form-group row">
                    <%= f.label :artist, class: "col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                    <%= f.text_field :artist, placeholder: "Enter Artist/Band or Group Name",class: "form-control" %>
                </div>
            </div>
            <div class="form-group row">
                    <%= f.label :venue, class: "col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                    <%= f.text_field :venue, placeholder: "Host venue" ,class: "form-control"%>
                </div>
            </div>
            <div class="form-group row">
                    <%= f.label :poster, class: "col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                    <%= f.file_field :poster, class: "form-control" %>
                </div>
            </div>
            <div class="form-group row">
                    <%= f.label :city, class: "col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                    <%= f.text_field :city, placeholder: "Host city?" ,class: "form-control"%>
                </div>
            </div>
            <div class="form-group row">
                    <%= f.label :date, class: "col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                    <%= f.datetime_field :date,  class: "form-control" %>
                </div>
            </div>
            <div class="form-group row">
    			    <%= f.label :description, class: "col-sm-2 col-form-label" %>
                <div class="col-sm-10">
    			    <%= f.text_area :description, placeholder: "A few words about your concert" ,class: "form-control"%>
                </div>
            </div>
            <div class="form-group row">
                    <%= f.label :price, class: "col-sm-2 col-form-label" %>
                <div class="col-sm-10">
                    <%= f.number_field :price, placeholder: "Price?" ,class: "form-control"%>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-10">
                    <%= f.button class: "btn btn-primary"%>
                </div>
            </div>
        <% end %>
</div>
