<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-pokemon btn btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view (hidden at first) -->
<div class="modal fade js-pokemon-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title row">
          <p class="pkmn-image col-sm-2"></p>
          <span class="js-pkmn-name col-sm-4">Feraligtr</span>
          <span class="js-pkmn-number col-sm-2">#160</span>
          <button class="js-btn-evo btn btn-outline-primary col-sm-3">Evolutions</button>
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">
        <dl class="dl-horizontal">
          <dt>Height</dt>
          <dd class="js-pkmn-height">23</dd>

          <dt>Weight</dt>
          <dd class="js-pkmn-weight">888</dd>

          <dt>HP</dt>
          <dd class="js-pkmn-hp">888</dd>

          <dt>Special Attack & Defence</dt>
          <dd class="js-pkmn-att-def">888</dd>

          <dt>Speed</dt>
          <dd class="js-pkmn-speed">888</dd>

          <dt>Types</dt>
          <dd class="js-pkmn-types"></dd>

          <dt>Description</dt>
          <dd class="js-pkmn-description"></dd>

        </dl>
      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->


<div class="modal fade js-evolutions-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          ........
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">

      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->
